<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                           

                 
                            
                                                                             
           

    <com.example.sirmaconsult.ScrollChildSwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:tag="layout/statistics_frag_0"   
                                                     
        android:layout_width="match_parent"
        android:layout_height="match_parent"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/statistics_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:tag="binding_1"                                                 >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/statistics_no_tasks"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:tag="binding_2"                                            />

                <TextView
                    android:id="@+id/stats_active_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:tag="binding_3"                                                        
                    android:textAppearance="?android:attr/textAppearanceMedium"
                                                                                       />

                <!-- android:paddingTop specified to temporarily work around -->
                <!-- https://github.com/robolectric/robolectric/issues/4588 -->
                <TextView
                    android:id="@+id/stats_completed_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="1dp"
                    android:tag="binding_4"                                                              
                    android:textAppearance="?android:attr/textAppearanceMedium"
                                                                                       />

            </LinearLayout>
        </LinearLayout>

    </com.example.sirmaconsult.ScrollChildSwipeRefreshLayout>
         