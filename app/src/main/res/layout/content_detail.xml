<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/dimen_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/dimen_2"
        app:cardElevation="@dimen/dimen_2"
        app:cardPreventCornerOverlap="true">

        <FrameLayout
            android:id="@+id/view_unlocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:padding="@dimen/dimen_12"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_10"
                    android:fontFamily="serif-monospace"/>

                <TextView
                    android:id="@+id/nameDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_10"
                    android:fontFamily="serif-monospace"/>
                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_10"
                    android:fontFamily="monospace"/>

                <TextView
                    android:id="@+id/tvPassportID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_10"
                    android:fontFamily="monospace"/>

                <TextView
                    android:id="@+id/tvBloodGrp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/tvBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_10"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:id="@+id/tvPassportIssued"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:textSize="@dimen/text_10"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/bg_lock"/>
                <TextView
                    android:id="@+id/tvPassportExpired"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/bg_lock"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>
        </FrameLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>